    private async Task CheckTargetTable()
    {
        if (string.IsNullOrWhiteSpace(_formModel.TargetTableName))
        {
            Message.Warning("请先填写目标表名称");
            return;
        }

        _checkingTargetTable = true;
        _targetTableExists = null;
        _targetTableCheckMessage = null;
        try
        {
            // TODO: 调用 PartitionInfoApiClient.CheckTableExistsAsync() 检查目标表是否存在
            // 临时模拟
            await Task.Delay(500, _cts.Token);
            var exists = new Random().Next(0, 2) == 1;
            _targetTableExists = exists;
            
            var fullTableName = $"{_formModel.TargetSchemaName ?? "dbo"}.{_formModel.TargetTableName}";
            _targetTableCheckMessage = exists
                ? $"目标表 {fullTableName} 已存在，可以直接使用"
                : $"目标表 {fullTableName} 不存在，需要先创建";
        }
        catch (OperationCanceledException)
        {
            // 忽略取消异常
        }
        catch (Exception ex)
        {
            Message.Error($"检查目标表失败: {ex.Message}");
        }
        finally
        {
            _checkingTargetTable = false;
        }
    }

    private async Task GenerateTargetTable()
    {
        if (string.IsNullOrWhiteSpace(_formModel.SourceTableName) || string.IsNullOrWhiteSpace(_formModel.TargetTableName))
        {
            Message.Warning("请先选择源表和填写目标表名称");
            return;
        }

        try
        {
            // TODO: 调用后端 API 生成目标表（复制源表结构）
            // 可以复用手动归档中的表结构生成逻辑
            await Task.Delay(1000, _cts.Token);
            Message.Success("目标表创建成功");
            _targetTableExists = true;
            _targetTableCheckMessage = $"目标表 {_formModel.TargetSchemaName ?? "dbo"}.{_formModel.TargetTableName} 已创建";
        }
        catch (OperationCanceledException)
        {
            // 忽略取消异常
        }
        catch (Exception ex)
        {
            Message.Error($"创建目标表失败: {ex.Message}");
        }
    }

